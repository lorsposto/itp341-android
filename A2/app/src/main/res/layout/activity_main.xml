<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ipt341.sposto.lorraine.a2.MainActivity"
    android:orientation="vertical">

    <!-- Section 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_chinese"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/imgbtn_horizontal_margin"
                android:layout_marginLeft="@dimen/imgbtn_horizontal_margin"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:padding="0px"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_french"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/imgbtn_horizontal_margin"
                android:layout_marginLeft="@dimen/imgbtn_horizontal_margin"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:padding="0px"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_chinese"
                android:text="@string/text_chinese"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_french"
                android:text="@string/text_french"
                android:gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>

    <!-- Section 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_indian"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/imgbtn_horizontal_margin"
                android:layout_marginLeft="@dimen/imgbtn_horizontal_margin"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:padding="0px"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_japanese"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/imgbtn_horizontal_margin"
                android:layout_marginLeft="@dimen/imgbtn_horizontal_margin"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:padding="0px"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_indian"
                android:text="@string/text_indian"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_japanese"
                android:text="@string/text_japanese"
                android:gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
    <!-- Section 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_spanish"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/imgbtn_horizontal_margin"
                android:layout_marginLeft="@dimen/imgbtn_horizontal_margin"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:padding="0px"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/image_thai"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/imgbtn_horizontal_margin"
                android:layout_marginLeft="@dimen/imgbtn_horizontal_margin"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:padding="0px"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_spanish"
                android:text="@string/text_spanish"
                android:gravity="center"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_thai"
                android:text="@string/text_thai"
                android:gravity="center"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
